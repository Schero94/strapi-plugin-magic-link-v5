{
  "kind": "collectionType",
  "collectionName": "magic_link_tokens",
  "info": {
    "singularName": "token",
    "pluralName": "tokens",
    "displayName": "Magic Link Token"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "content-manager": {
      "visible": false
    },
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "token": {
      "type": "string",
      "required": true,
      "private": true
    },
    "token_salt": {
      "type": "string",
      "private": true
    },
    "token_prefix": {
      "type": "string",
      "maxLength": 16,
      "description": "Non-sensitive prefix for efficient DB lookups (first 8 chars of plaintext token)"
    },
    "expires_at": {
      "type": "datetime",
      "required": true
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "is_used": {
      "type": "boolean",
      "default": false,
      "description": "Whether the token has been used at least once"
    },
    "used_at": {
      "type": "datetime",
      "description": "Timestamp of first use"
    },
    "context": {
      "type": "json"
    },
    "user_agent": {
      "type": "text",
      "description": "User agent of the browser used during login"
    },
    "ip_address": {
      "type": "string",
      "description": "IP address used during login"
    },
    "last_used_at": {
      "type": "datetime",
      "description": "Timestamp of last login using this token"
    }
  }
}
